<h1>Images</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag image.image_path, width: 100 %></td>
        <td><%= link_to(image.name, image) if image.name.present? %></td>
        <td>
          <%= link_to 'Edit', edit_image_path(image) %> |
          <%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
